<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane fx:controller="com.cs311.battleship.board.BoardController"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <VBox>

        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="80">
                <VBox alignment="CENTER">
                    <Text text="Your Board">
                        <font>
                            <Font size="24.0"/>
                        </font>
                    </Text>
                    <GridPane fx:id="playerGrid" alignment="CENTER" hgap="2" vgap="2"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Text text="Enemy Board">
                        <font>
                            <Font size="24.0"/>
                        </font>
                    </Text>
                    <GridPane fx:id="enemyGrid" alignment="CENTER" hgap="2" vgap="2"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>

